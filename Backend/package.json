{
    "type": "module",
    "scripts": {
        "dev": "nodemon --exec ts-node index.js",
        "start": "nodemon --watch './**/*.ts' --exec \"npx ts-node\" index.js"
    },
    "dependencies": {
        "body-parser": "^1.20.2",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "express": "^4.18.2"
    },
    "devDependencies": {
        "nodemon": "^2.0.20",
        "ts-node": "^10.9.2",
        "typescript": "^4.9.5"
    },
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "esModuleInterop": true,
        "outDir": "./dist",
        "strict": true
      },
      "include": ["./src/**/*.ts"],
      "exclude": ["node_modules"]
}
